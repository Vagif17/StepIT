<Window x:Class="IMDB_Search.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMDB_Search"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background= "Gray">

        <Grid.RowDefinitions>

            <RowDefinition Height="0.3*"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <TextBox x:Name="titlesearchTextBox" Grid.Row="0" Margin="200,0,200,69" FontSize="18"></TextBox>
        <Button x:Name="titlesearchButton" Margin="300,50,310,0" Foreground="DarkRed" Background="Black" Click="titlesearchButton_Click">Search</Button>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>


            </Grid.ColumnDefinitions>

            <Image x:Name="imageone" Grid.Column="0" Stretch="Uniform"/>
            <Image x:Name="imagetwo" Grid.Column="1" Stretch="Uniform"/>
            <Image x:Name="imagethree" Grid.Column="2" Stretch="Uniform" />


        </Grid>
        
        </Grid>
</Window>
