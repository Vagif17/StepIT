<Window x:Class="Task_4_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_4_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="0.15*"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="1">

            
            
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBlock  Grid.Column="0" x:Name="UserFilesTxtBlck" FontSize="20"></TextBlock>
            <TextBlock  Grid.Column="1" x:Name="CopiedFilesTxtBlck" FontSize="20"></TextBlock>

        </Grid>

        <TextBox x:Name="SourceTxtBox" Margin="0,0,100,0" FontSize="31"></TextBox>
            <Button x:Name="FindBtn" HorizontalAlignment="Right" Width="101" Click="FindBtn_Click">Find</Button> 
            
        
    </Grid>
</Window>
